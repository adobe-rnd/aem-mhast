{
  "$id": "blocks/tabs.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tabs Block",
  "description": "A collection of tabs, each with a title and content pane.",
  "type": "array",
  "x-eds-selector": "div",
  "items": {
    "type": "object",
    "properties": {
      "title": {
        "type": "string",
        "x-eds-selector": "div:first-child",
        "description": "The title of the tab."
      },
      "content": {
        "type": "string",
        "x-eds-selector": "div:last-child",
        "description": "The content panel for the tab."
      }
    },
    "required": [
      "title",
      "content"
    ]
  }
}