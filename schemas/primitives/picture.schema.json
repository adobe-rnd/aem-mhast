{
  "$id": "primitives/picture.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Picture",
  "description": "Primitive schema for HTML picture elements with responsive images",
  "type": "object",
  "x-eds-selector": "picture",
  "properties": {
    "picture": {
      "type": "object",
      "properties": {
        "src": {
          "type": "string",
          "format": "uri",
          "description": "Default image source from img element",
          "x-eds-selector": "img",
          "x-eds-attribute": "src"
        },
        "alt": {
          "type": "string",
          "description": "Alternative text from img element",
          "x-eds-selector": "img",
          "x-eds-attribute": "alt"
        },
        "sources": {
          "type": "array",
          "description": "Source elements for responsive images",
          "x-eds-selector": "source",
          "items": {
            "type": "object",
            "properties": {
              "srcset": {
                "type": "string",
                "x-eds-attribute": "srcset"
              },
              "media": {
                "type": "string",
                "x-eds-attribute": "media"
              },
              "type": {
                "type": "string",
                "x-eds-attribute": "type"
              }
            }
          }
        }
      },
      "required": [
        "src"
      ]
    }
  },
  "required": [
    "picture"
  ]
}