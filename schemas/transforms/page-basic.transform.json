{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Basic Page Transform",
  "description": "Transform schema for basic page layout output",
  "type": "object",
  "transforms": {
    "pageTitle": {
      "$from": "hero.title",
      "$default": "Untitled Page"
    },
    "heroImage": {
      "$from": "hero.picture.src"
    },
    "heroImageAlt": {
      "$from": "hero.picture.alt"
    },
    "pageDescription": {
      "$from": "hero.description",
      "$default": "No description available"
    },
    "allCards": {
      "$from": "cards.items"
    },
    "cardCount": {
      "$from": "cards.items",
      "$transform": "count"
    }
  }
}