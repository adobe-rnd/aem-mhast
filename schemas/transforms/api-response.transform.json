{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "API Response Transform",
  "description": "Transform schema for API response format",
  "type": "object",
  "transforms": {
    "meta": {
      "title": {
        "$from": "hero.title"
      },
      "description": {
        "$from": "hero.description"
      },
      "lastModified": {
        "$from": "meta.lastModified"
      }
    },
    "hero": {
      "headline": {
        "$from": "hero.title"
      },
      "imageUrl": {
        "$from": "hero.picture.src"
      },
      "imageAlt": {
        "$from": "hero.picture.alt"
      },
      "summary": {
        "$from": "hero.description"
      }
    },
    "content": {
      "$map": {
        "from": "cards.items",
        "transform": {
          "id": "title",
          "headline": "title",
          "summary": "description",
          "imageUrl": "picture.src",
          "link": "link.href"
        }
      }
    }
  }
}